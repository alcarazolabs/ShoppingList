<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/list"
  app:startDestination="@id/splashScreen">

  <fragment
    android:id="@+id/splashScreen"
    android:name="com.yonder.addtolist.presentation.splash.SplashFragment"
    android:label="@string/title_splash"
    tools:layout="@layout/splash_fragment">
    <action
      android:id="@+id/action_splash_to_shopping_list_items"
      app:destination="@id/shoppingListItemsScreen" />
  </fragment>


  <fragment
    android:id="@+id/loginScreen"
    android:name="com.yonder.addtolist.presentation.login.LoginFragment"
    android:label="@string/title_login"
    tools:layout="@layout/login_fragment">
    <action
      android:id="@+id/action_login_to_shopping_list_items"
      app:destination="@id/shoppingListItemsScreen" />
  </fragment>

  <fragment
    android:id="@+id/shoppingListItemsScreen"
    android:name="com.yonder.addtolist.presentation.list.ShoppingListItemsFragment"
    android:label="@string/title_shopping_list_items"
    tools:layout="@layout/shopping_list_items_fragment">

    <action
      android:id="@+id/action_shopping_list_items_to_splash"
      app:destination="@id/splashScreen"
      app:launchSingleTop="true"
      app:popUpTo="@+id/list"
      app:popUpToInclusive="true" />

    <action
      android:id="@+id/action_shopping_list_items_to_login"
      app:destination="@id/loginScreen"
      app:launchSingleTop="true"
      app:popUpTo="@+id/list"
      app:popUpToInclusive="true" />
  </fragment>

</navigation>